// если нам нужно сравнить что то для этого есть оператор условия if - все условия начинаються с него
// к примеру

if( 4 == 9 ) {
    console.log('okay');  
}

// после if мы в (в скобках) стивим то что хотим сравнить, дальше мы открываем {фигурный скобки}
// что бы сказать что произойдет если равны, к примеру в даном случае
// если у нас 4 не дут ровна 9 то ничего не произойдет, но если мы поставим 4 замисть 9
// то у нас выведеться слово Okay

if( 4 == 9 ) {
    console.log('okay');  
}else{
    console.log('error');  
}

// в этой ситуации else нам нужен если мы хотим сказать наоборот что если наша 4 не будет ровна 9 то у нас выполниться
// какое-то действие

// Тернарный оператор

(number === 50) ? console.log(`Ok!`) : console.log(`error `);
// это более короткий вариант сравнение
// первое что мы пишем (в скобках) это сравниваем переменную с числом дальше через знак ?
// говорим если ровно то выведет Ok а : двоеточиее если нет то выведем error

// команда switch тоже оператор сравнения
switch (num) { //раскрываем скобки
    case 49:
        console.log("неверно")
        breake;
}

// case это команда для сравнения после этого ставим двои точия и пишме что будет выполняться
// если оно верно, если оно не верно то код пойдет дальше, но также код пойдет дальше если будет верно
// и что бы код остановилься нужно ставить команду breake которая оставновит код если значение будет правельным

switch (num) { 
    case 49:
        console.log("неверно")
        breake;
    default:
        console.log("не в этот раз")
        breake;
}

// default - нужен нам если не одно из условий не правельно то по дефолту сработает команда

// со строками не только с цыфрами, все работает точно так же




