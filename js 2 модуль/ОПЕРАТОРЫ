let incr = 10, // вместо того что бы много раз прописывать переменную и ёё значение
    decr = 10; // мы можем указать через запятую, таким образом сократили код

incr ++; // оператор увелечение на еденицу  
decr --; // оператор уменьшение на еденицу   (оба эти операторы стоят после переменной) - они называються постфекстный

console.log(`${incr},${decr}`)

++incr; // такие нахывають префикстные
--decr;

//разница в том что если мы в консоли запустим постпрефиксную но не укажем ее в начале(тоесть в консоли только)
// то результата не будет потомучто постпрефикстная  сначала возращает старое значение тоесть 10

// а с префкстными мы увидем результат тоже самео только наоброт 


//оператор отстатка % 
console.log(5%2);

// оператор равенства, один раз использование = - это присваивание
console.log(5 = 4)
// но == уже два знака - это оператор равенства
console.log(2*4 =="8")
// если вдруг мы хотим сравнить по типу данных то используем уже === три знака ровно - строгое равенства
console.log(2*4 === 8)

// оператор 
'&&' // и, без кавычек

'||' // или, без кавычек

//пример

const isChecked = true,
      isClose = true;

console.log(isChecked && isClose) // оба эти значение верна и мы получим ture но если поменять какоето значение
//то получим false

//пример с ||

console.log(isChecked || isClose) // то мы получаем ture а не false если даже один из значени не равен

//оператор отрецания тоесть миняет значение на противоположное к примеру
'!'

const qwe = true;

console.log(!qwe) // мы получми false, оператор поменяет True на противоположный (false)