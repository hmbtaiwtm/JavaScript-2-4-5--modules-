                                //СТРОЧНЫЕ СВОЙСТВА И МЕТОДЫ\\
let str = 'test';

console.log(str.length); 

let arr = [1, 2 ,3];

console.log(arr.length); // length считает длину строки 


let srt = 'test';

console.log(srt[2]) // через [] мы моджем обратиться к индексу симвала в строчном типе данных
// поменять символ нельзя


let test = 'method test' // свойства они всегда пишуться через точку или ковычки, я методы мы должны после них ставить скобки

console. log(test.toUpperCase()); // вот пример, метод toUpperCase увеличивает все символы
console. log(test.toLowerCase()); // противоположное, уменяшает символы

console. log(test.indexOf('m')); // дает знать идекс символа или целого слова, если м укажем не существующий 
// символ то м получим значени - 1

console. log(test.slice(7, 10)); // указваем от какой позиции врезать слово и где закончить 
console. log(test.substring(6, 10)); // точно такой же метод как и slice() но разница в том что в нем не могут
// поддерживать отрицательные значения

console. log(test.substr(6, 5)); // метод с той же задаче но сначал мы указуем откуда начнем а дальше указуем
// сколько символов вырежем

                                    //ЧИСЛОВЫЕ СВОЙСТВА И МЕТОДЫ\\

const num = 22.5;

console.log(Math.round(num)); // Округляет числовые типы данных 

const tets = "12.2 px";

console.log(parseInt(tets)) // превразает в числовой тип данных и округляет
console.log(parseFloat(tets)) // делает тоже самое но без округления 

// Метод trim() позволяет удалят пробелы с начал и конца строки что бы пользователь не мог водить пробелы ведь 
// пробел это не пустая строка, ставиться после строки через точку