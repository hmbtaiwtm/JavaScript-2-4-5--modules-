// информация в мире програмирования, все состоит из информации и нам необходимо её куда-то помещать
// и ддя этого существует
// let имя = значение
// let number = 5;
// let - переменная  дальше имя переменной и знак "=" присваение значение переменной.

// воторой способ создать переменную 
// const имя = значение
// const LeftBorderWidth = 5;

// Имя переменных может состоять из бувк, цифр символов $ и нижнего подчеркивания
// и первый символ не должен быть цифрой!
// название переменных не должно повторять зарезервированые слова в языке Java script
// к примеру (error alert prompt и тд.)
// в название переменных каждое последущее слово должно начинаться с большой бувкы
// пример "const LeftBorderWidth = 5;"

// переменная "let" говорит нам о том что наша переменная изменяема и мы можем достать от туда информацию и поменять
// но переменую "const" мы не можем поменять, какое значение мы задали такое и останеться

// что бы изменить значение переменной мы должны обратиться к ней, к её имени
// к примеру обратимся к переменной "let number = 5;" и укажем ей нововое значение
// пишем имя переменной и новое значение numb = 10;

// что бы видеть какойто результат изменений мы можем написать такую команду как
// console log(number);
// таким образом мы обращаемся с помощью "console.log" к имени переменной в скобках  что бы увидеть наш результат

// но есть одна хитрость что б изменить значение в переменой "const"
// такая структура как 
const obj = {
    a:50
};

obj.a = 10; //вот таким образом можно поменять переменую "const"

// и третий способ использование переменной с помощью "var"
var name = 'Kris'; // но такой метот устаревший и его не стоит использовать в коде и "var" можно также менять
// значение как и в "let"
//но проблема в "var" в том что она существует ещё до того как она была обявлена в коде
// и соответсвенно видна она везде
// пример, если мы виведем значение в переменной "var" перед переменной
console.log(ggg);
var ggg = 'kris';
// код у нас будет без ошбики но в консоле нам вдаст такое значение как "undefined" но о нём чуть позже
// так вот такое поведение называеться "Хостинг или всплытие переменных"
// но если мы сделаем тоже самое но с переменной "let" то нам java script выдаст ошибку

// такие переменные как "let" и "const" они видны только в блоки кода ограниценого фигурными скобками
// пример
{
    let result = 5;
}
// и если мы вне этого блока кода попытаемся вывести из переменной информацию то увы мы не сможем
console.log(result);

"use strict" // с помощью такой дерективы мы говорим нашему файл скрипту то что мы работаем в современном
//режимом где не работают некоторые неточности которые были в старых стандартах Java script

//У Java script точно так же как и у html и css и какий-то припроцесоров пример sass или less есть свои
//стилистические правила, это делаеться для того что бы мы немогли запутаться и кто то другой смог в нем
//нормально разобраться
// и так (;) точки с запятой всегда просьба ставить после обявление переменной


