// простыми словами  это возможность одного типы данных превращаться в другой,
// например число превратиться в строку пример самый старый способ и не частоиспользуемый

//                                1) превращение в строку
//1) способ

console.log(typeof(String(null)))
console.log(typeof(String(1)))    // превращает в строку метод String()

// 2 способ конкатынация
console.log(typeof(5 +''))  // второй способ 

// реальные примеры, для чего это надо

const num = 5

console.log("https://vk.com/catalog/" + num);

//также мы можем формировать стили при помощи кода джава скрипт,  тоесть к примеру нам приходит значение 26 которое
// дожно быть 26, тогда мы можем сформулировать его в строку котороую мы сможем поместить в стили
//пример

const fontSize = 26 + 'px';

//                                     2) превращение в число

//1) способ

console.log(typeof(Number('4'))); // похожий способ как со строкой но уже заместь метода string() мы ставим метод Number

//2) способ  унарный плюс - это знак люса который ставят перед другим типом данных 

console.log(typeof(+'5'))

//3) не особо часто пользуються

console.log(typeof(parseInt('12px', 10)))

// реальные пременнение
// когда мы обычно получаем данные от пользователя(например от команды prompt()) то иногда нам нужне приаброзовывать такой
// тип данных в число
// сделать это можно при помощи унарного плюса к примеру

let answer = +prompt('hello',""); // инарный плюс перед методом promtp

// ВСЕ ЧТО МЫ ПОЛУЧАЕМ ОТ ПОЛЬЗОВАТЕЛЯ ВСЕГДА БУДЕТ ТИПОМ ДАННЫХ 'СТРОКА' И НА ОСНОВАНИЕ ЭТОЙ ТЕМЫ НУЖНО ПОНИМАТЬ
// ЧТО ИНОГДА ЭТИ ТИПЫ ДАННХЫ НУЖНО ПРИОБРОЗОВЫВАТЬ В ДРУГИЕ

//                                  3) вид динамической типизации boolean

// простота или ничего всегда будет ложь 

// все что всегда будет ложь  false
0, '', null, undefined, NaN,

// и то что будет правдой true
// это пустые массивы [], пустые объекты {}, строки 'Hi', и тд. 

' ' // но пробел в пустой строке это уже будет не пустая строка

// пример 
// 1) способ  превращения

let switcher = null;

if (switcher) {
    console.log('working') // понятно у нас не будет работать потому что проверяеться переменная switcher а она
}                          // ровна null тоесть false,

switcher = 1;  // но в будущем она может пометься и тогда у нас заработает наше условие

if (switcher) {
    console.log('working') 
}   

// 2) способ с помощью Boolean но применябт почти никогда потому что есть более лучше такой как выше приведенный

console.log(typeof(Boolean('4')));

// 3) способ  редкий прием спомощью !!

console.log(typeof(!!'4444'));





